<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Native ad headline -->
        <TextView
            android:id="@+id/native_ad_headline"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Native ad icon -->
        <ImageView
            android:id="@+id/native_ad_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/todo" />

        <!-- Native ad advertiser -->
        <TextView
            android:id="@+id/native_ad_advertiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/native_ad_headline"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:textColor="#808080"
            android:textSize="14sp" />

        <!-- Native ad body -->
        <TextView
            android:id="@+id/native_ad_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/native_ad_advertiser"
            android:layout_alignStart="@id/native_ad_advertiser"
            android:layout_margin="8dp"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Native ad media view (for images or videos) -->
        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/native_ad_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/native_ad_body"
            android:layout_marginTop="8dp" />

        <!-- Native ad call-to-action button -->
        <Button
            android:id="@+id/native_ad_call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/native_ad_media"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="#4285F4"
            android:padding="8dp"
            android:text="@string/click_here"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
